get-pink(s = false)
  if s == 50
    rgba(#fce4ec)
  else if s == 100
    rgba(#f8bbd0)
  else if s == 200
    rgba(#f48fb1)
  else if s == 300
    rgba(#f06292)
  else if s == 400
    rgba(#ec407a)
  else if s == 500
    rgba(#e91e63)
